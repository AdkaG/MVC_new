@model TwentyOneNew_Ajax.Models.TwentyOne

<div>
    <h4>TwentyOne</h4>
    <hr/>

    @using (Ajax.BeginForm(actionName: "GetValue", ajaxOptions: new AjaxOptions()
    {
        UpdateTargetId = "gameContainer",
        InsertionMode = InsertionMode.Replace
    }))
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Player)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Player)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CurrentValue)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CurrentValue)
            </dd>
        </dl>
        @Html.ActionLink("1", "GetValue", 1)
        @Html.ActionLink("2", "GetValue", 2)
    }
    
    
</div>

